<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/newbackground1"
    tools:context="com.app.ui.NumberBind">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_back1"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/leftarrow"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="修改手机号"
            android:textColor="@color/black"
            android:textSize="16sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/tv_currentnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="当前手机号"/>
        <TextView
            android:id="@+id/currentphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_centerHorizontal="true"
            android:text="15990075781"
            android:textColor="@color/black"
            android:textSize="18sp"/>
    </RelativeLayout>


    <com.app.views.CleanEditText
        android:id="@+id/tv_phone"
        style="@style/login_edit_style"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:hint="请输入新手机号码"
        android:inputType="phone"
        android:textSize="14sp"
        android:background="@color/white"/>

    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/iv_logo"
        android:background="@android:color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff" />

        <com.app.views.CleanEditText
            android:id="@+id/verificode_input2"
            style="@style/login_edit_style"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textSize="14sp"
            android:maxLength="6"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btn_send_verifi_code"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="@color/newbackground"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:background="@drawable/btn_login_selector1"
        android:text="确定修改"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>
