<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_userAddress"
        android:layout_below="@+id/main1"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_95"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:text="毛建辉" />

        <TextView
            android:id="@+id/tv_userPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:layout_toEndOf="@+id/tv_userName"/>

        <TextView
            android:id="@+id/tv_isdefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_userName"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginStart="@dimen/dp_15"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/viewfinder_laser"
            android:background="@color/address_background"/>

        <TextView
            android:id="@+id/tv_userAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_userName"
            android:layout_marginStart="@dimen/dp_0"
            android:layout_marginTop="11dp"
            android:textSize="@dimen/sp_12"
            android:layout_toEndOf="@+id/tv_isdefault"/>
        <TextView
            android:id="@+id/tv_detailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_userAddress"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/sp_12"/>

        <ImageView
            android:id="@+id/iv_addressEdit"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/ic_edit"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_17"/>
    </RelativeLayout>

</LinearLayout>