<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.ui.application.AllAppFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_eleme"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/elme" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/iv_eleme"
            android:layout_alignStart="@+id/iv_eleme"
            android:layout_below="@+id/iv_eleme"
            android:gravity="center"
            android:text="饿了么" />

        <ImageView
            android:id="@+id/iv_meituan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_eleme"
            android:src="@drawable/meituan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/iv_meituan"
            android:layout_alignStart="@+id/iv_meituan"
            android:layout_below="@+id/iv_eleme"
            android:gravity="center"
            android:text="美团外卖" />

    </RelativeLayout>

</FrameLayout>
