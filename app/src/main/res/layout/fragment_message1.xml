<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newbackground1">

    <View
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/newbackground"
        android:visibility="gone" />

    <include layout="@layout/fragment_title" />

    <RelativeLayout
        android:id="@+id/rl_huifu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="2dp"
        android:background="@color/white">

        <com.app.view.CircleImageView
            android:id="@+id/iv_huifu"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:src="@drawable/comment" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_huifu"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:text="评论/回复"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/count1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:background="@drawable/redrect"
            android:gravity="center"
            android:text="3"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/rightarrow"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_dianzan"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="2dp"
        android:background="@color/white">
        <com.app.view.CircleImageView
            android:id="@+id/iv_zan"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/zan" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="收到的赞"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/iv_zan"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/count2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:background="@drawable/redrect"
            android:gravity="center"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/rightarrow"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_systemNotify"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="2dp"
        android:background="@color/white">
        <com.app.view.CircleImageView
            android:id="@+id/iv_tongzhi"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:src="@drawable/systemnotify" />

        <TextView
            android:id="@+id/system_notify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="系统通知"
            android:layout_alignTop="@+id/iv_tongzhi"
            android:layout_toEndOf="@+id/iv_tongzhi"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="Hi,亲爱的薇薇，欢迎你登录亲情视线!"
            android:layout_toEndOf="@+id/iv_tongzhi"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/system_notify"
            android:gravity="center_vertical"
            android:textSize="12sp"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/rightarrow"
            />

    </RelativeLayout>



</LinearLayout>